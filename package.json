{
  "name": "my-electron-app",
  "version": "1.0.0",
  "description": "Tity Property Desktop App",
  "main": "main.js",
  "author": "Mudambi Himakiran",
  "license": "ISC",
  "scripts": {
    "start": "electronmon . main.js",
    "dev": "electronmon .",
    "build": "electron-builder",
    "build:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.tityproperty.desktop",
    "productName": "Tity Property",
    "directories": {
      "output": "release"
    },
    "files": [
      "**/*",
      "!node_modules/**/*",
      "!release/**/*",
      "!.gitignore"
    ],
    "win": {
      "target": "nsis",
      "icon": "src/assets/TityLogo.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "devDependencies": {
    "electron": "^39.2.7",
    "electron-builder": "^26.0.12",
    "electronmon": "^2.0.4"
  },
  "dependencies": {
    "axios": "^1.13.2"
  }
}
